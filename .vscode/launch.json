{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gst-launch (mypassthrough)",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/bin/gst-launch-1.0",
      "args": [
        "-v",
        "videotestsrc",
        "!",
        "mypassthrough",
        "!",
        "fakesink"      // ou autovideosink selon l’environnement graphique
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "GST_PLUGIN_PATH",
          "value": "${workspaceFolder}/build"
        },
        {
          "name": "GST_DEBUG",
          "value": "mypassthrough:6"   // verbosité plugin
        }
      ],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        { "description": "GDB: activer l’impression automatique", "text": "-enable-pretty-printing" }
      ]
    },
    {
      "name": "Debug Google Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/buildtests/runTests",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
      {
        "name": "GST_PLUGIN_PATH",
        "value": "${workspaceFolder}/build"
      }
      ],      
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
      {
        "description": "Enable automatic printing",
        "text": "-enable-pretty-printing",
        "ignoreFailures": true
      }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "Debug Google Test (Single Test Change Http Server)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/buildtests/runTests",
      "args": [
      "--gtest_filter=HttpServerTest.BasicGet" // Replace with your suite and test name
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
      {
        "name": "GST_PLUGIN_PATH",
        "value": "${workspaceFolder}/build"
      }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
      {
        "description": "Enable automatic printing",
        "text": "-enable-pretty-printing",
        "ignoreFailures": true
      }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "/usr/bin/gdb"
    },
     {
      "name": "Debug Google Test (Single Test Change BitrateVisual)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/buildtests/runTests",
      "args": [
      "--gtest_filter=MypassthroughTest.ChangeBitrateVisual_LiveWindow_Threaded" // Replace with your suite and test name
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
      {
        "name": "GST_PLUGIN_PATH",
        "value": "${workspaceFolder}/build"
      }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
      {
        "description": "Enable automatic printing",
        "text": "-enable-pretty-printing",
        "ignoreFailures": true
      }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
